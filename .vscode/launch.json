{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[API] Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/apps/api",
    },
    {
      "name": "Launch my-nest-project",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "api:serve",
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/api"
    }
  ]
}